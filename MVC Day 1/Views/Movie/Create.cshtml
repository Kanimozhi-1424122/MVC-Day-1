@model MVC_Day_1.Movies
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Detail</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(c => c.MovieName)
            @Html.TextBoxFor(c => c.MovieName, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.MovieName)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.ReleaseDate)
            @Html.TextBoxFor(c => c.ReleaseDate, new { @class = "form-control"})
            @Html.ValidationMessageFor(c => c.ReleaseDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.ActorName)
            @Html.TextBoxFor(c => c.ActorName, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.ActorName)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.AvailableStocks)
            @Html.TextBoxFor(c => c.AvailableStocks, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AvailableStocks)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.GenreId)
            @Html.DropDownListFor(c => c.GenreId, ViewBag.GenreId as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.GenreId)
        </div>
        <div class="form-group">
            <input type="submit" name="btnsubmit" class="btn btn-primary" value="submit" />
        </div>
    }
</div>